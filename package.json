{
  "name": "tidder",
  "description": "An multi-platform reddit client built with web technologies",
  "repository": "iErik/tidder",
  "productName": "Tidder",
  "version": "2.0.0-alpha.1",
  "license": "GPL-2.0-only",
  "author": {
    "name": "Erik Isidore",
    "email": "ericssonico@protonmail.ch",
    "url": "https://github.com/ierik"
  },
  "scripts": {
    "dev": "ts-node build/dev-server.js",
    "start-dev": "cross-env NODE_ENV=development electron -r ts-node/register ./app/main.dev.ts",
    "build": "ts-node build/build.js",
    "build:pack": "npm run build && node_modules/.bin/electron-builder",
    "build:pack:multi": "npm run build && node_modules/.bin/electron-builder -mlw --x64",
    "build:pack:mac": "npm run build && node_modules/.bin/electron-builder --mac --x64",
    "build:pack:win": "npm run build && node_modules/.bin/electron-builder --win --x64",
    "build:pack:linux": "npm run build && node_modules/.bin/electron-builder --linux --x64"
  },
  "build": {
    "productName": "Tidder",
    "artifactName": "${productName} Beta.${ext}",
    "appId": "org.isidore.Tidder",
    "directories": {
      "buildResources": "resources",
      "output": "release",
      "app": "app"
    },
    "files": [
      "assets/",
      "app.html",
      "main.js",
      "package.json",
      "yarn.lock"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": "zip"
    },
    "linux": {
      "category": "Feed",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": "portable"
    }
  },
  "browserslist": [
    "electron 5.0"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.4",
    "@hot-loader/react-dom": "16.8.4",
    "@types/node": "^12.0.10",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.1.1",
    "@types/react-router-dom": "^4.3.4",
    "autoprefixer": "^9.6.0",
    "babel-loader": "^8.0.6",
    "babel-register": "^6.26.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^5.0.5",
    "electron-builder": "^20.44.4",
    "electron-debug": "^3.0.0",
    "electron-devtools-installer": "^2.2.4",
    "express": "^4.17.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^4.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^0.7.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.12.0",
    "node-sass-json-importer": "^4.1.0",
    "ora": "^3.4.0",
    "postcss-loader": "^3.0.0",
    "react": "^16.8.6",
    "react-hot-loader": "^4.11.1",
    "redux-logger": "^3.0.6",
    "resolve-url-loader": "^3.1.0",
    "sass-loader": "^7.1.0",
    "shelljs": "^0.8.3",
    "style-loader": "^0.23.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "url-loader": "^2.0.0",
    "webpack": "^4.35.0",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-client": "^4.1.1",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.1"
  }
}
